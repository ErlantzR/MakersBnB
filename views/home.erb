<body>

  <div>
    <% if @user %>

    Logged in as <%= @user.username %>

    <% end %>
  </div>

<div class="wrapper">

<div class="background_div">
  </div>

  <div class="one" id="item1">
    <h1>Mi Casa Su Casa </h1>
  </div>

  <div class="two" id="sign_up_door_div">
    <div class="text_div">
      <h2>Sign Up</h2>
    </div>
    <form action='/user/new' method='get'>
    <input type="image" id="img1" src='https://source.unsplash.com/PWjA3zA497I' />
    <input type="hidden" name="sign_up" value="sign_up" />
    </form>
  </div>

  <div class="three" id="login_door_div">
    <div class="text_div">
      <h2>Login</h2>
    </div>
    <form action='/sessions/new' method='get'>
    <input type="image" id="img2" src='https://source.unsplash.com/f7pTMJ1ekqI' />
    <input type="hidden" name="login" value="login" />
    </form>
  </div>

</div>

</body>
